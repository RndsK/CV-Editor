@model Latvijas_Pasts.Models.Cv

@{
    ViewData["Title"] = "View";
}

<h1 class="text-danger mb-4">Delete CV</h1>

<div class="alert alert-warning">
	<strong>Warning:</strong> You are about to delete this CV. This action cannot be undone.
</div>

<div class="card mb-4">
	<div class="card-header">
		<h5>Personal Information</h5>
	</div>
	<div class="card-body">
		<dl class="row">
			<dt class="col-sm-3">Name</dt>
			<dd class="col-sm-9">@Model.Name @Model.Surname</dd>

			<dt class="col-sm-3">Phone</dt>
			<dd class="col-sm-9">@Model.Phone</dd>

			<dt class="col-sm-3">Email</dt>
			<dd class="col-sm-9">@Model.Email</dd>
		</dl>
	</div>
</div>

<form asp-action="Delete">
	<input type="hidden" asp-for="Id" />
	<div class="form-group text-center">
		<input type="submit" value="Delete" class="btn btn-danger btn-lg" />
		<a asp-action="Index" class="btn btn-secondary btn-lg ms-3">Cancel</a>
	</div>
</form>
