@model Latvijas_Pasts.Models.Cv

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
			
            <!-- Address Section -->
            <h4>Address</h4>
            <div class="form-group">
                <label asp-for="Address.Country" class="control-label"></label>
                <input asp-for="Address.Country" class="form-control" />
                <span asp-validation-for="Address.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label"></label>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.HouseNumber" class="control-label"></label>
                <input asp-for="Address.HouseNumber" class="form-control" />
                <span asp-validation-for="Address.HouseNumber" class="text-danger"></span>
            </div>

            <!-- Education Section -->
            <h4>Education</h4>
            @for (int i = 0; i < Model.EducationList.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="EducationList[i].InstitutionName" class="control-label"></label>
                    <input asp-for="EducationList[i].InstitutionName" class="form-control" />
                    <span asp-validation-for="EducationList[i].InstitutionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationList[i].Faculty" class="control-label"></label>
                    <input asp-for="EducationList[i].Faculty" class="form-control" />
                    <span asp-validation-for="EducationList[i].Faculty" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationList[i].StudyField" class="control-label"></label>
                    <input asp-for="EducationList[i].StudyField" class="form-control" />
                    <span asp-validation-for="EducationList[i].StudyField" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationList[i].Degree" class="control-label"></label>
                    <input asp-for="EducationList[i].Degree" class="form-control" />
                    <span asp-validation-for="EducationList[i].Degree" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationList[i].Status" class="control-label"></label>
                    <input asp-for="EducationList[i].Status" class="form-control" />
                    <span asp-validation-for="EducationList[i].Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EducationList[i].Duration" class="control-label"></label>
                    <input asp-for="EducationList[i].Duration" class="form-control" />
                    <span asp-validation-for="EducationList[i].Duration" class="text-danger"></span>
                </div> 
                <hr />
            }

            <!-- Experience Section -->
            <h4>Experience</h4>
            @for (int i = 0; i < Model.ExperienceList.Count; i++)
            {
                <div class="form-group">
                    <label asp-for="ExperienceList[i].CompanyName" class="control-label"></label>
                    <input asp-for="ExperienceList[i].CompanyName" class="form-control" />
                    <span asp-validation-for="ExperienceList[i].CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperienceList[i].Position" class="control-label"></label>
                    <input asp-for="ExperienceList[i].Position" class="form-control" />
                    <span asp-validation-for="ExperienceList[i].Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperienceList[i].Duration" class="control-label"></label>
                    <input asp-for="ExperienceList[i].Duration" class="form-control" />
                    <span asp-validation-for="ExperienceList[i].Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperienceList[i].Description" class="control-label"></label>
                    <input asp-for="ExperienceList[i].Description" class="form-control" />
                    <span asp-validation-for="ExperienceList[i].Description" class="text-danger"></span>
                </div>
                <hr />
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
